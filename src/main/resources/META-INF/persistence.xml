<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="PU">

    <class>com.example.forumbiznes.Model.User</class>
    <class>com.example.forumbiznes.Model.Comment</class>
    <class>com.example.forumbiznes.Model.Post</class>
    <class>com.example.forumbiznes.Model.Topic</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/test"/>
      <property name="jakarta.persistence.jdbc.user" value="BURAK"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
